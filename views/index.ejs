<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>mini Whattsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <!-- <h3>All chats</h3> 
    <form method="GET"actiom="/chats">
        <button>NEW CHAT</button>
    </form> -->

    <form method="GET" action="/new">
        <button>NEW CHAT</button>
    </form>
    

   <% for(let chat of chats) { %>
        <div class="chat">
            <p>From : <%= chat.from %> </p>
            
            <div class="msg">
                <p><%= chat.msg %></p>
            </div>

            <form method="GET" action="/chats/<%= chat._id %>">  <!--//to send request....../chats/:id-->
                <button>EDIT</button>
            </form>
            
            <p>received by <%= chat.to %></p>
            <p><%= chat.created_at.toString().split() %></p>
        </div>
        <hr>

   <% } %>
</body>
</html>

